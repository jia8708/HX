/* pages/index/index.wxss */

#top-swiper {
    width: 100vw;
    height: 40vw;
}
#top-swiper image {
    width: 100%;
    height: 100%;
}

#school-s {
    width: 100vw;
    height: 11vw;
    background: #4da4e6;
    color: #8fd1fc;
    box-sizing: border-box;
    border: 1.5vw solid #2a8def;
    display: flex;
}
#school-s image {
    box-sizing: border-box;
    padding: 1.5vw;
    width: 8vw;
    height: 8vw;
}
#school-s picker {
    flex: 1;
    padding-left: 2vw;
    line-height: 8vw;
    font-size: 3.8vw;
    height: 100%;
}
#day-s {
    width: auto;
    height: 12vw;
    overflow-y: auto;
    display: block;
    white-space: nowrap;
    border-bottom: 1px solid #eeeeee;
}
#day-s view {
    height: calc(8vw - 1px);
    line-height: 8vw;
    padding: 2vw 0;
    display: inline-block;
}
#day-s view text {
    height: 100%;
    width: 100%;
    text-align: center;
    padding: 0 5vw;
    border-right: 1px solid #ccc;
    box-sizing: border-box;
}
#day-s view.ACTIVE {
    border-bottom: 1px solid #2b8ce8;
}
#day-s view.ACTIVE text {
    color: #2b8ce8;
}
#content-con {
    width: 100vw;
    background: #f4f4f4;
    height: calc(100vh - 23vw);
    overflow-x: auto;
}

.con {
    position: relative;
    width: 100vw;
    box-sizing: border-box;
    border-bottom: 1px solid #f5f5f5;
    background: white;
    padding: 5vw;
}
.con-title:active {
    background: #f6f6f6;
}
.con image {
    width: 4.5vw;
    height: 4.5vw;
    padding: 2.5vw 2vw 0;
}
.con-title {
    color: #333;
    line-height: 9vw;
}
.con-class, .con-place, .con-time {
    color: #777;
    font-size: 3.6vw;
    line-height: 5vw;
    height: 8vw;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.con-go {
    float: right;
    margin-left: 8vw;
    padding: 1vw 4vw;
    border-radius: 1vw;
    margin-top: -7vw;
    background: #2b8ce8;
    color: white;
    z-index: 2;
}
.con-go:active {
    opacity: .5;
}


/* pages/user/user.wxss */
page {
    background: #f9f9f9;
}
.top {
    width: 100vw;
    height: 32vw;
    position: relative;
}
.top image {
    width: 20vw;
    height: 20vw;
    position: absolute;
    top: 50%;
    left: 50%;
    background: white;
    margin-top: -10vw;
    margin-left: -10vw;
    border: 1vw solid rgba(255, 255, 255, .5);
    border-radius: 50%;
}
.banner {
    position: absolute;
    width: 100vw;
    height: 80vw;
    z-index: -1;
}

.li-one {
    background: white;
    width: 100%;
    height: 14vw;
    border-bottom: 1px solid #f5f5f5;
    background: white;
    line-height: 14vw;
}
.li-one text {
    line-height: 14vw;
    height: 14vw;
    float: left;
    color: #666;
}
.li-one image {
    width: 6vw;
    height: 6vw;
    padding: 4vw;
}
.lo-l {
    float: left;
}
.lo-r {
    float: right;
}

.li-two {
    margin-top: 4vw;
    background: white;
    height: 14vw;
    line-height: 14vw;
    width: 100%;
    color: #666;
    text-align: center;
    border-bottom: 1px solid #f5f5f5;
    border-top: 1px solid #f5f5f5;
}
.li-two button{
  width: 100%;
   background: white;
}

.li-one:active, .li-two:active {
    background: #f6f6f6;
}