.search {
  margin: 0rpx auto;
  width: 690rpx;
  height: 65rpx;
  background: #f5f4f7;
  border-radius: 30rpx;
  border: #f5f4f7;
}
#scroll{
 height: 1100rpx;
}
.box {
  padding-left: 80rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: flex-start;
}

.search image {
  margin-top: 20rpx;
  width: 81rpx;
  height: 30rpx;
}

.search input {
  margin-top: 10rpx;
  padding-left: 10rpx;
  width: 700rpx;
  float: left;
}

.box {
  margin: 40rpx auto;
  width: 300rpx;
}

.head {
  margin: 53rpx auto 30rpx 30rpx;
  margin-top: 53rpx;
  height: 36rpx;
}

.head image {
  margin-top: 5rpx;
  width: 12rpx;
  height: 34rpx;
}

.head text {
  margin-left: 19rpx;
  font-size: 36rpx;
  font-family: "PingFang SC";
  color: #000;
}

.rowteam {
  margin: 30rpx;
  height: 164rpx;
  background: #fcfcfc;
}

.rowteam::after {
  clear: both;
  display: block;
  contain: '';
}

.defimg {
  float: left;
  margin: 30rpx 20rpx 0rpx 30rpx;
  width: 100rpx;
  height: 100rpx;
}

.rowteam .right {
  float: left;
  margin-top: 20rpx;
  width: 540rpx;
}

.nametime {
  margin-top: 12rpx;
}
.nametime::after{
  clear: both;
  display: block;
  content: '';
}

.rowteam .name {
  font-family: PingFangSC-Regular, sans-serif;
  font-size: 32rpx;
  color: #000;
  float: left;
  width: 365rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.button:active{
  opacity: 0.7
}
.rowteam .time {
  display: block;
  float: right;
margin-top: 7rpx;
  margin-right: 42rpx;
  /* font-family: PingFang-; */
  font-size: 24rpx;
  color: #ff66a2;
}

.location {
  /* margin-top: 10rpx; */
}

.location text {
  font-size: 24rpx;
  color: #666;
  line-height: 10rpx;
  align-content: center;
}

.location image {
  width: 26rpx;
  height: 26rpx;
  margin-right: 10rpx;
}

.button {
  float: right;
  position: relative;
  margin-right: 20rpx;
  margin-top: 5rpx;
}

.button text {
  position: absolute;
  left: 15%;
  line-height: 50rpx;
  font-size: 26rpx;
  color: #fff;
}

.button image {
  width: 150rpx;
  height: 50rpx;
}
.footbutton{
  position: fixed;
  bottom: 0rpx;
  left: 42vw;
  z-index: 100;
}
.footbutton image{
width:120rpx;
height: 120rpx;
}